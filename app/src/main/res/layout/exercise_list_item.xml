<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_exercise_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="bench press" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_exercise_title_set_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_exercise_title_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_title_name"
        tools:text="SET" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_exercise_title_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_exercise_title_reps"
        app:layout_constraintStart_toEndOf="@id/tv_exercise_title_set_number"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_title_name"
        tools:text="WEIGHT" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_exercise_title_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_exercise_title_weight"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_title_name"
        tools:text="REPS" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_exercise_sets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/set_list_item"
        app:layout_constraintTop_toTopOf="@id/guideline_titles" />

</androidx.constraintlayout.widget.ConstraintLayout>